pipeline {
    agent any
    tools {
        nodejs "node1610"
    }
    environment {
        MODE = "dev"
    }

    stages {
        stage('pre build') {
            steps {
                script {
                    tag = sh(script: "git tag -l | tail -1 | tr -d \'\\n\'", returnStdout: true)
                    rm -rf ./build
                }
            }
        }
        stage('yarn install') {
            steps {
                sh "yarn install"
            }
        }
        stage('yarn build') {
            steps {
                sh "yarn build"
                sh "ls -l ./build"
            }
        }
        stage('copy to folder') {
            steps {
                sh "cp -r ./build /app/dev/jcp-application"
            }
        }
    }
}